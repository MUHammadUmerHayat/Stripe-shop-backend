{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@types": ["src/types"],
      "@tests/*": ["tests/*"]
    },
    "lib": [
      "es2018",
      "es2018.promise"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "types": [
    "src/types.d.ts"
  ]
}
